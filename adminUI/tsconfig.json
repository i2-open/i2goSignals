{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@radix-ui/*": ["@radix-ui/*"],
      "lucide-react@*": ["lucide-react"],
      "cmdk@*": ["cmdk"],
      "vaul@*": ["vaul"],
      "input-otp@*": ["input-otp"]
    },
    "types": ["vite/client"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/dev/**"
  ]
}